  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Launch Current File",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "type": "java",
      "name": "Launch App",
      "request": "launch",
      "mainClass": "com.colapietro.throwback.App",
      "projectName": "mitchell-n-ness"
    },
    {
      "type": "java",
      "name": "Launch HelloWorld",
      "request": "launch",
      "mainClass": "com.colapietro.throwback.lwjgl.HelloWorld",
      "projectName": "mitchell-n-ness"
    },
    {
      "type": "java",
      "name": "Launch Image (macOS)",
      "request": "launch",
      "mainClass": "com.colapietro.throwback.lwjgl.demo.Image",
      "projectName": "mitchell-n-ness",
      "vmArgs": "-XstartOnFirstThread -ea"
    },
    {
      "type": "java",
      "name": "Launch Truetype (macOS)",
      "request": "launch",
      "mainClass": "com.colapietro.throwback.lwjgl.demo.Truetype",
      "projectName": "mitchell-n-ness",
      "vmArgs": "-XstartOnFirstThread -ea"
    }
  ]
}
